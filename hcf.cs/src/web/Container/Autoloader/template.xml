<dummy.container>
  <loop.foreach var="{{property:data}}" value="current_value" call="createRow">{{property:current_row}}</loop.foreach>
  <loop.foreach var="{{property:assembly_data}}" key="assembly_name" value="content" call="shiftExternal">
  	<!-- add wrappers for each channel-type -->
  	<condition.switch value="{{local:assembly_name}}">
  		
  		<condition.case value="style">
				<condition.if value="{{local:content}}" is="EXTERNAL">
					<!-- hcf.web.Router and the hcf.web.Container.Autoloader.provider will do the rest -->
					<link rel="stylesheet" type="text/css" href="{{property:current_assembly_route}}"/>
				</condition.if>
				<condition.else>
  					<style>{{local:content}}</style>
				</condition.else>
  		</condition.case>
  		
  		<condition.case value="client">
				<condition.if value="{{local:content}}" is="EXTERNAL">
					<!-- hcf.web.Router and the hcf.web.Container.Autoloader.provider will do the rest -->
					<script src="{{property:current_assembly_route}}" language="javascript"/>
				</condition.if>
				<condition.else>
					<script language="javascript">{{local:content}}</script>
				</condition.else>
  		</condition.case>
  		
  		<condition.case value="output">
				<condition.if value="{{local:content}}" is="EXTERNAL">
					<script language="javascript">alert('EXTERNAL LOADING OF OUTPUT ASSEMBLIES IS CURRENTLY NOT POSSIBLE TROUGH THE hcf.web.Container - greetings from {{const:FQN}}');</script>
				</condition.if>
				<condition.else>
					<dummy.container>{{local:content}}</dummy.container>
				</condition.else>
  		</condition.case>

  		<condition.case>
  			<dummy.container>{{local:content}}</dummy.container>
  		</condition.case>

  	</condition.switch>
  </loop.foreach>
</dummy.container>

#~registerHCFQN:
<!-- arg0: name of the HC (a HCFQN) arg1: data to register into the DOM (javascript object or function string) -->
<dummy.container>document.registerComponent('{{arg:0}}', {{arg:1}});</dummy.container>

<!-- THE PROCESSOR FUNCTIONS BEGIN HERE: -->
#~stylesheet:
<!-- arg0: data to include arg1: embed (true/false) -->
<dummy.container>
	<condition.if value="{{arg:1}}" is="true">
		<style>{{arg:0}}</style>
	</condition.if>
	<condition.else>
		<link rel="stylesheet" type="text/css" href="{{arg:0}}"/>
	</condition.else>
</dummy.container>

#~javascript:
<!-- arg0: data to include arg1: embed (true/false) -->
<dummy.container>
	<condition.if value="{{arg:1}}" is="true">
		<script language="javascript">{{arg:0}}</script>
	</condition.if>
	<condition.else>
		<script src="{{arg:0}}"/>
	</condition.else>
</dummy.container>
